{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    // "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./lib",
    "paths": {
      "@/*": ["./*"],
      "@": ["./"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx"
  },
  "include": ["./src/**/*.ts", "./src/**/.tsx", "src/site/index.tsx"]
}
